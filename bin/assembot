#!/usr/bin/env node

var src= "BEEP BOOP BLARP CLANG OORT".split(' '),
    sfx= src[Math.floor(Math.random() * src.length)],
    pkg= require('../package'),
    log= require('../lib/log'),
    cli= require('commander');

console.log("\n  AssemBot! *"+ sfx +"*\n")

cli.version(pkg.version)

require('../lib/cli/build')(cli, pkg)
require('../lib/cli/init')(cli, pkg)
require('../lib/cli/new')(cli, pkg)
require('../lib/cli/serve')(cli, pkg)

cli.parse(process.argv)

if(cli.verbose) log.level( 2 )
if(cli.quiet) log.level( 0 )


