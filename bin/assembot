#!/usr/bin/env coffee

src= "BEEP BOOP BLARP CLANG OORT".split ' '
sfx= src[Math.floor(Math.random() * src.length)]
pkg= require '../package'
cli= require 'commander'
 
cli
  .version(pkg.version)
  .command('build', 'Builds target package(s)')
  .command('serve', 'Starts dev server')
  .command('new [project]', 'Create a new project')
  .command('init', 'Creates a configuration file, if missing')
  # .command('info', 'Show information about build')
  # .command('debug', 'Show debug information')
  .parse(process.argv)

log= require '../lib/assembot/log'

log.level 2 if cli.verbose
log.level 0 if cli.quiet

log.info "\n  AssemBot! *#{ sfx }*"
