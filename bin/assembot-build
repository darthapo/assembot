#!/usr/bin/env coffee

cli= require 'commander'
{assembot, _}= require '../lib/assembot'
{puts, pp}= _

cli
  .option('-f, --force', 'force installation')
  .parse(process.argv);

puts ''
puts("Building...");

bot= assembot './source'

# pp bot

bot.build 'js', (err, content)->
  puts "Built!"
  # pp content
  pp bot





